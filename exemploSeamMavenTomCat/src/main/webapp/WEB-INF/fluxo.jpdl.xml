<pageflow-definition xmlns="http://jboss.com/products/seam/pageflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jboss.com/products/seam/pageflow http://jboss.com/products/seam/pageflow-2.0.xsd"
	name="login">

	<start-page view-id="/bemvindo.xhtml" name="start">
		<transition to="empresaDecision" name="comecar"></transition>
	</start-page>

	<decision name="empresaDecision" expression="#{autenticador.empresa}">
		<transition to="trechos" name="true"></transition>
		<transition to="clienteDecision" name="false"></transition>
	</decision>

	<decision name="clienteDecision" expression="#{autenticador.comprador}">
		<transition to="cliente" name="true"></transition>
		<transition to="erro" name="false"></transition>
	</decision>

	<page view-id="/trechos.xhtml" name="trechos">
		<end-conversation />
		<redirect />
	</page>

    <page view-id="/cliente.xhtml" name="cliente">
		<end-conversation />
		<redirect />
	</page>

	<page view-id="/error.xhtml" name="erro">
		<end-conversation />
		<redirect />
	</page>
	
</pageflow-definition>